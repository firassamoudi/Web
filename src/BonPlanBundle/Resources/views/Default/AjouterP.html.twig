{% extends '@BonPlan/Default/index.html.twig' %}
{% block body %}
    <!--============================= BOOKING =============================-->

        <br>
        <br>


<body style="background-size: 100% 100%;background-image: url({{ asset('images/slider.jpg') }}) ">
<form    style="height: 500px ; color: #f3f4f7  "    >
            <div class="container-fluid ">

                <div class="col-lg-8 col-md-7">




                    <center>
                        <div class="header">
                          <h3 class="title" style="color: indianred">Creer votre  profile Proprietaire </h3>
                        </div>
                    </center>
                        {{ form_start(form) }}


                            <div class="content">
                                <div class="row">
                                    <div class="col-md-4">

                                        <div class="form-group">
                                            {{ form_row(form.nomPlan, {'label':"Nom Plan" ,'attr': {'class': 'form-control border-input'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>



                        <div class="content">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        {{ form_row(form.adresse, {'label':"adresse " ,'attr': {'class': 'form-control border-input'}}) }}
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="content">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        {{ form_row(form.telephone, {'label':"telephone" ,'attr': {'class': 'form-control border-input'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                    <div class="content">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_row(form.photodeprofil, {'label':"Photo de Profil" ,'attr': {'class': 'form-control border-input'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>

                            <div>
                                <input style="background-color: #bd2130 " ; type="submit" class="btn btn-info btn-fill btn-wd" value="Enregistrer" />
                                {{ form_row(form._token) }}
                            </div>






                    {{ form_end(form) }}
                </div>
                </div>

            </div>
            </div>
        </form>
</body>


{% endblock %}