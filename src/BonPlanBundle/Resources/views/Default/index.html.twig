{% extends ":default:index.html.twig" %}
{% block body %}
    <!-- SLIDER -->
    <section class="slider d-flex align-items-center active" id="sectiontest">
        <!-- <img src="images/slider.jpg" class="img-fluid" alt="#"> -->
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12">
                    <div class="slider-title_box">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="slider-content_wrap">
                                    <h1>حاير و مش عارف وين تمشي </h1>
                                    <h3 style="color: #C9C9C9">هيا وين تعاونك بش تاكل , تسهر , تحوس </h3>
                                </div>
                            </div>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <div class="col-md-10">
                                <form class="form-wrap mt-4">
                                    <div class="btn-group" role="group" aria-label="Basic example">


                                        <a  href="{{ path('recherche_Kbira') }}" style="background-color: #DA2D39; width: 1000px; height: 40px"  class="btn"><span class="icon-magnifier search-icon"></span>  SEARCH</a>
                                    </div>
                                </form>
                                <div class="slider-link">
                                    <a href="#">Browse Popular</a><span>or</span> <a href="#">Recently Addred</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--// SLIDER -->

    <section class="main-block">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="styled-heading">
                        <h3>What do you need to find?</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for categorie in categories %}
                    <div class="col-md-4 featured-responsive">
                        <div class="find-place-img_wrap">
                            <div class="grid">
                                <a href={{ path('Categorie_restau') }}>
                                    <figure class="effect-ruby">
                                        <img src="{{ asset('uploads/images/Categorie/'~categorie.imageCategorie) }}" style="height: 227px; width: 350px; display: block;" class="img-fluid" alt="#">
                                        <figcaption>
                                            <h5>{{ categorie.nomCategorie }}</h5>
                                        </figcaption>
                                    </figure>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <section class="main-block light-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="styled-heading">
                        <h3>Featured Places</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                {{ render(controller('BonPlanBundle:Default:indexViewAll')) }}
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="featured-btn-wrap">
                        <a href="#" class="btn btn-danger">VIEW ALL</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}