{% extends ":default:index.html.twig" %}
{% block body %}
    <!-- SLIDER -->
    <section class="slider d-flex align-items-center active" id="sectiontest">
        <!-- <img src="images/slider.jpg" class="img-fluid" alt="#"> -->
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12">
                    <div class="slider-title_box">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="slider-content_wrap">
                                    <h1>Discover great places in Tunisia</h1>
                                    <h5>Let's uncover the best places to eat, drink, and shop nearest to you.</h5>
                                </div>
                            </div>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <div class="col-md-10">
                                <form class="form-wrap mt-4">
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <input type="text" placeholder="What are your looking for?" >
                                        <input type="text" placeholder="Tunisia" class="btn-group2">
                                        <button style="background-color: #DA2D39" type="submit" class="btn-form"  ><span class="icon-magnifier search-icon"></span>SEARCH<i class="pe-7s-angle-right"></i></button>
                                    </div>
                                </form>
                                <div class="slider-link">
                                    <a href="#">Browse Popular</a><span>or</span> <a href="#">Recently Addred</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--// SLIDER -->

    <section class="main-block">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="styled-heading">
                        <h3>What do you need to find?</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for categorie in categories %}
                    <div class="col-md-4 featured-responsive">
                        <div class="find-place-img_wrap">
                            <div class="grid">
                                <a href={{ path('Categorie_restau') }}>
                                    <figure class="effect-ruby">
                                        <img src="{{ asset('uploads/images/Categorie/'~categorie.imageCategorie) }}" style="height: 227px; width: 350px; display: block;" class="img-fluid" alt="#">
                                        <figcaption>
                                            <h5>{{ categorie.nomCategorie }}</h5>
                                        </figcaption>
                                    </figure>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <section class="main-block light-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="styled-heading">
                        <h3>Featured Places</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                {{ render(controller('BonPlanBundle:Default:indexViewAll')) }}
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="featured-btn-wrap">
                        <a href="#" class="btn btn-danger">VIEW ALL</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
