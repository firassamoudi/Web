{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
<h3 class="text-white">Pas encore inscrit?</h3>
                <p class="text-secondary">nous vous invitions à vous inscrir</p>
                <p class="text-secondary">afin de manager équilibré</p>
                <a  class="btn btn-primary" href="{{ path('fos_user_registration_register'|trans) }}">S'inscrire</a>

            </div>
            <div class="col-sm-6">

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <table style="width: 50%">
        <tr>
            <td style="width: 100%">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="username" class="form-control border-top-0 border-left-0 border-right-0 rounded-0 "/>
            </td>
        </tr>
        <tr>
            <td style="width: 100%">
                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Password" class="form-control border-top-0 border-left-0 border-right-0 rounded-0 " />
            </td>
        </tr>
        <tr>
            <td style="width: 100%">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me" style="color: #ffffff;">{{ 'security.login.remember_me'|trans }}</label><br/>

                <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="{{ 'security.login.submit'|trans }}" />
            </td>
        </tr>
    </table>
</form>
            </div>
        </div>
<br>
        <div class="row">
            <div class="col-sm-6">
                <a  class="btn btn-primary" href="{{ path('fos_user_resetting_request'|trans) }}">Mot de passe oublié?</a>
            </div>
            </div>
    </div>
</div>
